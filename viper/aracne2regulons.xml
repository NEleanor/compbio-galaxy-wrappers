<tool id="run_viper" name="aracne2regulons" version="0.1.0">

    <requirements>
      <requirement type="package" version="1.10.0">bioconductor-viper</requirement>
      <requirement type="package" version="1.3.2">r-optparse</requirement>
      <requirement type="package" version="0.8.6">r-reshape</requirement>
      <requirement type="package" version="2.2.1">r-ggplot2</requirement>
      <requirement type="package" version="TODO">buchanae-viper</requirement>
    </requirements>

    <command detect_errors="exit_code"><![CDATA[
        aracne2regulons.r --output $regulons --expr $expression --network $network
    ]]></command>

    <inputs>
        <param type="data" name="network" />
        <param type="data" name="expression" />
    </inputs>

    <outputs>
        <data name="regulons" format="tsv" />
    </outputs>

    <help><![CDATA[
Usage: aracne2regulons.r [options]

Options:
	-o OUTPUT, --output=OUTPUT
		Path to output.

	-e EXPR, --expr=EXPR
		Path to input expression matrix used to build ARACNE network.

	-n NETWORK, --network=NETWORK
		Path to ARACNE network.txt.

	-h, --help
		Show this help message and exit
    ]]></help>
</tool>
