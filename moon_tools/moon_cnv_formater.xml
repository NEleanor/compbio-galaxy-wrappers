<tool id="Moon_CNV_formatter" name="Moon CNV Formatter" version="1.0.0">
	<description>reformats a CNV vcf generated by XHMM so it can be read by Moon.</description>
	<command><![CDATA[
		python $__tool_directory__/moon_cnv_formater.py ${input} ${output}
]]>	</command>
	<inputs>
		<param name="input" type="data" format="vcf" label="CNV VCF"/>
	</inputs>
	<outputs>
		<data format="vcf" name="output" label="${tool.name} on ${on_string}"/>
	</outputs>
	
	
</tool>